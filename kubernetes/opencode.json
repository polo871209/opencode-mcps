{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "kubernetes-mcp-server": {
      "enabled": true,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "kubernetes-mcp-server@latest",
        "--read-only"
      ]
    },
    "k8sgpt": {
      "enabled": true,
      "type": "local",
      "command": [
        "k8sgpt",
        "serve",
        "--mcp",
        "-b",
        "ollama"
      ]
    }
  }
}
